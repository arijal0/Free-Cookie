<MyBoxLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 20
    size_hint: (1,1)
    
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.jpg"

    Image:
        source: 'pythonlogo.webp'
        

    Label:
        text: "Free[color=#FFD700] Cookie[/color]"
        font_size: "35sp"
        markup: True

    TextInput:
        id: input_name
        hint_text: "Name"
        background_color: (1, 1, 1, 1)  # Semi-transparent white background
        foreground_color: (0, 0, 0, 1)  # Black text color
        
        
    Label:
        id: output_label
        text: "Welcome!"
        font_size: "24sp"
    

    Image:
        id: cookie_image
        

    Button:
        text: "Get Started"
        on_press:
            app.get_started()
            app.play_button_sound()
        font_size: "19sp"
        background_color: (2, 1, 1, 2)
        

    Button:
        text: "Clear"
        on_press:
            app.clear_output()
            app.play_button_sound()
        font_size: "19sp"
        background_color: (1, 1, 3, 2)
        

    Button:
        text: "Click for a cookie :)"
        on_press:
            app.cookie()
            app.play_cookie_sound()
            app.play_button_sound()
        font_size: "19sp"
        background_color: (1, 2, 2, 1)
        
